
<div class="container">
  <div class="notification is-primary">
    {{title}}
  </div>
  <div class="box">
    {{content}}
    </br>
    </br>
    Created by : {{user.name}} on {{format_date date_created}}
  </div>
  </br>
</div>
</br>
<h2 class="margin-left">Comment's Post</h2>
</br>
{{#each comments as |comment| }}
<div class="container">
  <div class="box">
    {{comment.discription}}
    </br>
    </br>
    Created on by {{comment.post.user.name}} {{format_time comment.date_post}} with {{comment.post_id}}
  </div>
  </br>
</div>
{{/each}}
 <div class="field is-grouped is-grouped-centered">
  <p class="control">
    <button class="button is-primary" id="newpostBtn"><a href="/newcomment/{{id}}">Add Comment</a></button>
  </p>
</div>
</br>